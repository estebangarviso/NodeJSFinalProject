{
  "name": "ecommerce-nodejs",
  "version": "0.1.0",
  "description": "An e2e test for nodejs certification on Escalab Academy",
  "main": "dist/index.js",
  "repository": "https://github.com/estebangarviso/NodeJSFinalProject.git",
  "author": "Esteban Garviso",
  "license": "MIT",
  "scripts": {
    "import:db": "ts-node ./src/import/index.ts",
    "prestart": "node scripts/prestart.js",
    "start": "node dist/index.js",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production tsc && babel dist --out-dir dist",
    "dev": "nodemon",
    "env:dev": "cross-env APP_ENV=dev node scripts/env.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose",
    "test:coverage": "jest --coverage",
    "test:debug": "pnpm test --runInBand --detectOpenHandles -- --silent=false",
    "test:help": "jest --help",
    "lint": "eslint . --ext .ts",
    "lint:fix": "pnpm run lint -- --fix",
    "prepare": "husky install",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.421.0",
    "@sinclair/typebox": "^0.31.17",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "chalk": "4.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "loglevel": "^1.8.1",
    "mongoose": "^7.5.3",
    "morgan": "^1.10.0",
    "nanoid": "^3",
    "rimraf": "^5.0.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.23.0",
    "@babel/core": "^7.23.0",
    "@faker-js/faker": "^8.1.0",
    "@types/express": "^4.17.18",
    "@types/http-errors": "^2.0.2",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/morgan": "^1.9.6",
    "@types/node": "^20.7.1",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.4",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "axios": "^1.5.1",
    "babel-plugin-transform-inline-environment-variables": "^0.4.4",
    "babel-preset-minify": "^0.5.2",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jsdoc": "^46.8.2",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,md,html}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,json",
    "ignore": [
      "src/**/*.spec.ts"
    ],
    "exec": "cross-env NODE_ENV=development ts-node ./src/index.ts"
  },
  "engines": {
    "node": "18.x",
    "pnpm": "8.x",
    "npm": "use pnpm",
    "yarn": "use pnpm"
  }
}
